<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<style>
    body {
        background: #F4F4EA;
    }
</style>

<!-- Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">

                <label for="nameTextField">Survey Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the survey name"
                name="name" 
                value="<%= survey.name %>"
                required>
            </div>

            <div class="form-group">

                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter the your name"
                name="author" 
                value="<%= survey.author %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the contacts email address"
                name="email" 
                value="<%= survey.email %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Question1</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter question"
                name="question1" 
                value="<%= survey.question1 %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Question2</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter question"
                name="question2" 
                value="<%= survey.question2 %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Question3</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter question"
                name="question3" 
                value="<%= survey.question3 %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Question4</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter question"
                name="question4" 
                value="<%= survey.question4 %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Question5</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter question"
                name="question5" 
                value="<%= survey.question5 %>"
                required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Update</button>

                <a href="/survey" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

        </form>
    </div>
    </div>
</div>


